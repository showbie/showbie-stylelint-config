{
  "name": "@showbie/stylelint-config",
  "description": "Stylelint configuration for Showbie projects",
  "license": "ISC",
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson @stormwarning (https://www.showbie.com)"
  ],
  "homepage": "https://github.com/showbie/showbie-stylelint-config",
  "repository": "showbie/showbie-stylelint-config",
  "version": "0.4.1",
  "scripts": {
    "changelog": "lerna-changelog",
    "changeset": "changeset add",
    "lint": "eslint '**/*.js'",
    "release": "changeset publish",
    "test": "npm run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "stylelint-config-property-sort-order-smacss": "6.3.0",
    "stylelint-config-sass-guidelines": "6.2.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.18.0"
  },
  "peerDependencies": {
    "stylelint": ">=10"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@showbie/eslint-config": "^5.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.0",
    "lerna-changelog": "1.0.x",
    "lint-staged": "10.2.x",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "stylelint": "11.1.x"
  },
  "keywords": [
    "showbie",
    "stylelint-config"
  ],
  "changelog": {
    "repo": "showbie/showbie-stylelint-config",
    "labels": {
      "breaking": "💣 Breaking Change",
      "removed": "🗑️ Removed",
      "deprecated": "🚚 Deprecated",
      "changed": "♻️ Changed",
      "added": "🎁 Added",
      "fixed": "🐛 Fixed",
      "security": "🔒 Security"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "package.json": "prettier --write"
  },
  "prettier": {
    "singleQuote": true
  }
}
