{
  "name": "@showbie/stylelint-config",
  "description": "Lint CSS, free of weariness and confusion",
  "license": "ISC",
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson @stormwarning (https://www.showbie.com)"
  ],
  "homepage": "https://github.com/showbie/showbie-stylelint-config",
  "repository": "showbie/showbie-stylelint-config",
  "version": "0.1.0",
  "scripts": {
    "precommit": "lint-staged && npm test",
    "lint": "npm-run-all lint:*",
    "lint:scripts": "prettier-eslint '**/*.js' --write --list-different",
    "test": "npm run lint"
  },
  "dependencies": {
    "stylelint-config-property-sort-order-smacss": "^4.0.1",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.2"
  },
  "peerDependencies": {
    "stylelint": ">=9"
  },
  "devDependencies": {
    "@showbie/eslint-config": "^0.1.1",
    "husky": "^1.1.2",
    "lint-staged": "7.3.0",
    "npm-run-all": "^4.1.3"
  },
  "keywords": [
    "showbie",
    "stylelint-config"
  ],
  "lint-staged": {
    "*.{js|json}": [
      "prettier-eslint --list-different",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
